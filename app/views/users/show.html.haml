%body
  %h2.text-center Recommended Weekly Meal Plan
  .wrapper
    %header.header Your calories are #{@calories} height is #{@height} weight is #{@weight}
    %aside.aside.aside-l
      %h3 Breakfast - #{@breakTitle}
      %h5 Calories: #{@breakCals}
      %h5 Preparation time: #{@breakTime} mins
      %h5 Cost: $#{@breakPrice}
    %aside.aside.aside-d
      %h3 Lunch - #{@lunchTitle}
      %h5 Calories: #{@lunchCals}
      %h5 Preparation time: #{@lunchTime} mins
      %h5 Cost: $#{@lunchPrice}
    %aside.aside.aside-b
      %h3 Dinner - #{@dinTitle}
      %h5 Calories: #{@dinCals}
      %h5 Preparation time: #{@dinTime} mins
      %h5 Cost: $#{@dinPrice}
    %footer.footer Footer

